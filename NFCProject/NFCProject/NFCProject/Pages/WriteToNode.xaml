<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCProject.Pages.WriteToNode"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             Title="Write To Node">

    <StackLayout Padding="10" Spacing="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <CheckBox ClassId="NetID" Grid.Row="0" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Network ID" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="0" Grid.Column="1"/>
            <Entry x:Name="NetID" ClassId="NetID" Text="N/A" Keyboard="Numeric" Grid.Row="0" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="NetChan" Grid.Row="1" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Network Channel" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="1" Grid.Column="1"/>
            <Entry ClassId="NetChan" Text="N/A" Keyboard="Numeric" Grid.Row="1" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="NodeConfig" Grid.Row="2" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Node Configuration" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="2" Grid.Column="1"/>
            <Entry ClassId="NodeConfig" Text="N/A" Keyboard="Numeric" Grid.Row="2" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="OperMode" Grid.Row="3" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Operating Mode" FontSize="20" LineBreakMode="WordWrap" Grid.Row="3" VerticalOptions="Center" Grid.Column="1"/>
            <Entry ClassId="OperMode" Text="N/A" Keyboard="Numeric" Grid.Row="3" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="EncKey" Grid.Row="4" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Encryption Key" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="4" Grid.Column="1"/>
            <Entry ClassId="EncKey" Text="N/A" Keyboard="Numeric" Grid.Row="4" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="AuthKey" Grid.Row="5" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Authentication Key" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="5" Grid.Column="1"/>
            <Entry ClassId="AuthKey" Text="N/A" Keyboard="Numeric" Grid.Row="5" Grid.Column="2" TextChanged="OnTextChanged"/>

            <CheckBox ClassId="UpdateRate" Grid.Row="6" Grid.Column="0" CheckedChanged="Entry_CheckBox"/>
            <Label Text="Update Rate" FontSize="20" LineBreakMode="WordWrap" VerticalOptions="Center" Grid.Row="6" Grid.Column="1"/>
            <Entry ClassId="UpdateRate" Text="N/A" Keyboard="Numeric" Grid.Row="6" Grid.Column="2" TextChanged="OnTextChanged"/>
        </Grid>
        <Button Text="Scan" FontSize="20" HorizontalOptions="Start" Clicked="iosScan">
            <Button.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean" iOS="true" Android="false"/>
            </Button.IsVisible>
        </Button>
        <Button Text="Save"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Clicked="SaveValues"/>
    </StackLayout>

</ContentPage>